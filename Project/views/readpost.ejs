<!DOCTYPE html>
<html lang="en">
   <%- include('./partial/head.ejs')%>
    <body>
       <%- include('./partial/usernavbar.ejs')%>
    <!-- Page Header-->
        <header class="masthead" style="background-image: url('/web/assets/img/photo.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Share The Adventures</h1>
                            <span class="subheading"></span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <hr>
         <!-- Main Content -->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                <% if(displayData) {%>
                 <div class="card mb-3">
                    <img src="/<%= displayData.image%>" class="card-img-top" alt="...">
                        <div class="card-body">
                          <h5 class="card-title"><%= displayData.title %></h5>
                          <h5> <p class="card-text"><%- displayData.subtitle %></p> </h5>
                          <hr>
                          <p class="card-text"><%- displayData.post%></p>
                         <p class="card-text"><small class="text-muted">Thank You for Reading!</small></p> 
                      </div>
                </div>
                <%} %>
            
            </div>
        
        </div>
        </div>
        <%- include('./partial/comments.ejs')%>
         <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="/" style="margin-top: 20px; margin-right: 23%;"> &#8592; Previous Page </a></div>
        
        <!-- Footer-->
        <%- include('./partial/footer.ejs')%>
    </body>
</html>
